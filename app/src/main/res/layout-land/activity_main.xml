<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.clara.rockpaperscissors.MainActivity">

    <TextView
        android:id="@+id/opponent_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/waiting_for_opponent"
        />

    <ImageView
        android:id="@+id/opponent_play_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/paper"
        android:visibility="invisible"/>


    <TextView
        android:id="@+id/game_result_tv"
        android:layout_below="@id/opponent_play_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="result here"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>




    <ImageView
        android:id="@+id/player_play_image"
        android:layout_toEndOf="@id/opponent_play_image"
        android:layout_toRightOf="@id/opponent_play_image"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/paper"
        android:visibility="invisible"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/play_rock"
            android:layout_width="@dimen/rps_image"
            android:layout_height="@dimen/rps_image"
            android:src="@drawable/rock"/>

        <ImageView
            android:id="@+id/play_paper"
            android:layout_width="@dimen/rps_image"
            android:layout_height="@dimen/rps_image"
            android:src="@drawable/paper"/>

        <ImageView
            android:id="@+id/play_scissors"
            android:layout_width="@dimen/rps_image"
            android:layout_height="@dimen/rps_image"
            android:src="@drawable/scissors"/>


    </LinearLayout>


</RelativeLayout>
